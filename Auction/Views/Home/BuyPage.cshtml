@{
    var buyedıtems = (List<BuyedItem>)ViewBag.A;
    foreach (var item in buyedıtems)
    {
        <h3>Name:</h3>
        <h4>@item.Name</h4>
        <h3>Price:</h3>
        <h4>@item.Price</h4>
    }
    int totalprice = 0;
    buyedıtems.ForEach(x =>
    {
        totalprice = totalprice + x.Price;
    });
    <h1>Total Price:</h1>
    <h2>@totalprice</h2>
    <button onclick="Next()">Next</button>
    <div class="Unvisible" id="NextChapter">
        <p>Next</p>
    </div>
}
<link rel="stylesheet" href="~/css/Buying.css" />
<script src="~/js/Buying.js"></script>
